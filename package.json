{
  "displayName": "HomeBridge Roku TVs",
  "name": "homebridge-roku-tvs",
  "version": "1.0.0",
  "description": "Roku TV Support for HomeKit",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:jorge-ramirez/homebridge-roku-tv.git"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">0.4.53"
  },
  "main": "dist/index.js",
